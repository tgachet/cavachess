{% extends "layout.html.twig" %}

{% block page_title %}
    <h1>
    {% if new %}
        Création d'un compte utilisateur
    {% else %}
        Modification du compte utilisateur {{ user.id }}
    {% endif %}
    </h1>
{% endblock %}
{% block content %}
    {{ form_start(form) }} {# ouvre la balise <form> #}
    {{ form_row(form.firstname) }} {# affiche l'élément de formulaire pour name #}
    <div class="form-btn-group pull-right">
        <button type="submit" class="btn btn-primary">Enregistrer</button>
        <a href="{{ path('app_admin_user_listusers') }}" class="btn btn-default">Annuler</a>
    </div>
    {{ form_end(form) }} {# ferme la balise <form> #}
{% endblock %}